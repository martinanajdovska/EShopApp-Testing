@model ArtEShop.Domain.DomainModels.ArtPiece;

@{
    ViewData["Title"] = "Edit";
}

<h3>Edit Art Piece</h3>

<hr />
<div class="container col-md-4 d-flex justify-content-center align-items-center" style="height: 470px;">
        <img class="card-img-start mt-3 mx-5" src="/uploads/@Model.Image" style="max-width:470px; height:auto; max-height: 470px; width:auto;" alt="Image for product!">

        <form asp-action="Edit" method="post" class="d-flex-y align-self-center justify-content-center" style="width:auto;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="width:200px;">
                <label asp-for="Name" class="control-label mt-2"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label mt-2"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group d-flex justify-content-evenly align-items-center mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>

